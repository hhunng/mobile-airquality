<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:id="@+id/viewSupporter"/>

            <EditText
                android:id="@+id/txt_1"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_above="@id/txt_2"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_person_ic"
                android:drawablePadding="10dp"
                android:hint="@string/username"
                android:inputType="textPersonName">

            </EditText>

            <EditText
                android:id="@+id/txt_2"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_above="@id/viewSupporter"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_email_ic"
                android:drawablePadding="10dp"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress">

            </EditText>

            <EditText
                android:id="@+id/txt_3"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_below="@id/viewSupporter"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_lock_ic"
                android:drawablePadding="10dp"
                android:hint="@string/password"
                android:inputType="textPassword">

            </EditText>

            <EditText
                android:id="@+id/txt_4"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_below="@id/txt_3"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_lock_ic"
                android:drawablePadding="10dp"
                android:hint="@string/confirm_password"
                android:inputType="textPassword">
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:id="@+id/viewSupporter1"/>
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/viewSupporter1"
                android:background="@drawable/button_signup">
            </Button>
            <Button
                android:id="@+id/btn_back"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewSupporter1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/back"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_back">
            </Button>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>